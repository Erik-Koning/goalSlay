{
	"name": "@chat-assistant/database",
	"version": "1.0.0",
	"private": true,
	"main": "./src/generated/index.js",
	"types": "./src/generated/index.d.ts",
	"exports": {
		".": {
			"types": "./src/generated/index.d.ts",
			"default": "./src/generated/index.js"
		},
		"./client": {
			"types": "./src/generated/index.d.ts",
			"default": "./src/generated/index.js"
		}
	},
	"scripts": {
		"generate": "dotenv -e ../../.env -- prisma generate",
		"db:push": "dotenv -e ../../.env -- prisma db push"
	},
	"dependencies": {
		"@prisma/adapter-pg": "^6.18.0",
		"@prisma/client": "catalog:",
		"@prisma/client-runtime-utils": "7.2.0",
		"dotenv": "^16.4.5",
		"pg": "^8.17.2"
	},
	"devDependencies": {
		"@types/pg": "^8.16.0",
		"dotenv-cli": "^11.0.0",
		"prisma": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:"
	}
}
